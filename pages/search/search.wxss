/* pages/search/search.wxss */
page {
  background-color: #ffffff;
}
.input {
  border-radius: 0 !important;
}
.header{
  border-bottom: 1px solid #f3f3f3;
  background-color: #ffffff;
  padding-bottom: 14rpx;
  position: fixed;
  z-index: 77;
  width: 750rpx;
  top: 0;
}

.container {
  padding-top: 70rpx;
}
.history-container {
  display: flex;
  flex-direction: column;
}
.history-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 38rpx;
}
.history-title text {
  font-size: 28rpx;
  color: #333333;
}
.slide{
  width: 8rpx;
  height: 46rpx;
  background-color: #157658;
  margin-right: 22rpx;
}
.icon {
  margin-right: 30rpx;
}

.tag {
  background-color: #f3f3f3 !important;
  color: #666666 !important;
  margin: 0 20rpx 20rpx 0 !important;
}
.history-tags {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
  padding-left: 30rpx;
  flex-wrap: wrap;
}
.tag-selected {
  background-color: #dcebe6 !important;
  color: #157658 !important;
  margin: 0 20rpx 20rpx 0 !important;
}