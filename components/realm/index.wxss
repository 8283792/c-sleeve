/* components/realm/index.wxss */
.container {
  margin-bottom: 100rpx;
  background: #ffffff;
  box-sizing: border-box;
  max-height: 1000rpx;
  min-height: 700rpx;
}
.inner-container {
  padding: 30rpx 30rpx 0 30rpx;
}
.sku-preview {
  display: flex;
  flex-direction: row;
}
.sku-img {
  width: 160rpx;
  height: 160rpx;
}
.sku-description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}
.discount-price {
  margin-right: 20rpx;
}
.price-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.sku-pending {
  font-size: 20rpx;
}
.sku-pending > text:first-child {
  color: #999999;
}
.sku-pending > text:nth-child(2){
  color: #666666;
}
.hr {
  width: 690rpx;
  height: 2rpx;
  margin-top: 30rpx;
  background: #e9e9e9;
}
.stock {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #999999;
}
.stock-pinch {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #d20109;
}

.counter-container {
  margin-top: 34rpx;
  padding-bottom: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.counter-container text {
  color: #555555;
  font-size: 24rpx;
}
.bottom-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  background: #333333;
}
.out-stock {
  background-color: #dcebe6;
}
.bottom-btn text {
  color: #ffffff;
}