/* components/spu-preview/index.wxss */
.container {
  display: flex;
  width: 340rpx;
  flex-direction: column;
  box-shadow:0px 0px 8px 0px rgba(221,221,221,0.5);
  margin-bottom: 30rpx;
  background-color: #ffffff;
}
.img {
  width: 100%;
  height: 360rpx;
}
.content-container {
  display: flex;
  flex-direction: column;
  padding: 16rpx 16rpx 22rpx 16rpx;
}
.price-row {
  display: flex;
  flex-direction: row;
}
.tags {
  display: flex;
  flex-direction: row;
  margin: 6rpx 0 8rpx 0;
  flex-wrap: wrap;
  /* min-height: 36rpx; */
}
.l-tag {
  background-color: #DCEBE6 !important;
  color: #157658 !important;
  height: 36rpx !important;
  margin-right: 5rpx;
}
.title {
  font-size: 28rpx;
  color: #333333;
}
.discount-price {
  margin-right: 20rpx;
}
.subtitle {
  font-size: 24rpx;
  font-weight: 300;
  margin-top: 6rpx;
  color: #888888;
}