.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 34rpx 30rpx 26rpx 30rpx;
}
.left {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.tags {
  display: flex;
}
.l-tag {
  margin-right: 6rpx !important;
}
.subtitle {
  color: #999999;
  margin: 40rpx 0 16rpx 0;
  font-size: 28rpx;
  font-weight: 400;
}
.price-row {
  display: flex;
  align-items: baseline;
}
.discount-price {
  margin: 0 80rpx 0 20rpx;
}
.l-price-unit {
  margin-right: 14rpx !important;
}
.discount-tag {
  position: relative !important;
  bottom: 4rpx;
  width: 50rpx;
  border-radius: 20rpx !important;
}

.right {
  display: flex;
  flex-direction: row;
  justify-content: end;
  width: 78rpx;
  height: 120rpx;
  margin-left: 20rpx;
  border-left: 2px dashed #f5f5f5;
}
.inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 120rpx;
  background-color: #DCEBE6;
}
.inner text {
  font-size: 20rpx;
  color: #157658;
}