<view class="container">
  <view class="icons">
    <view bind:tap="onGoHome">
      <l-icon size="46" name="home" l-class="sleeve" />
      <text>首页</text>
    </view>

    <view bind:tap="onGoCart">
      <l-badge value="{{99}}">
        <l-icon name="cart" size="46" color="#157658" />
      </l-badge>
      <text>购物车</text>
    </view>
  </view>

  <view bind:tap="onAddToCart" class="cart btn-font">
    <text>加入购物车</text>
  </view>
  <view bind:tap="onBuy" class="buy btn-font">
    <text>立即购买</text>
  </view>
</view>